<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Study Lane AI</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../stylesheet/chatpage.css" />
  </head>
  <body>
    <%- include('userNavbar') %>
    <div class="container">
      <div class="wrapper">
        <div class="time">
          <p>Jarvis AI</p>
          <img
            src="https://img.icons8.com/?size=20&id=tDtvWzs979he&format=png&color=000000"
            alt="aiimage"
          />
        </div>
        <div class="chat" id="chat-box">
          <% chatHistory.forEach(message => { %>
          <div class="<%= message.sender === 'User' ? 'user' : 'aiDetails' %>">
            <% if (message.sender === 'AI') { %>
            <div class="profilepic">
              <img src="../images/adobe.png" alt="AI profile pic" />
            </div>
            <% } %>
            <div
              class="<%= message.sender === 'User' ? 'userDet' : 'aitext' %>"
            >
              <p><%= message.message %></p>
            </div>
          </div>
          <% }); %>
        </div>
        <form action="/generative/chat" method="post">
          <div class="input">
            <textarea
              type="text"
              name="chat"
              class="inputField"
              placeholder="Reply to Jarvis"
            ></textarea>
            <div class="arrowinput">
              <button type="submit">
                <i class="fa-solid fa-circle-arrow-up arrow hidden-arrow"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <script src="../scripts/chatpage.js"></script>
  </body>
</html>
